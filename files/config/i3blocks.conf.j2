separator_block_width=14

[public-ip]
command=ping -n -c 1 1.1.1.1 | grep 'time=' | sed 's/.*time=\([0-9.]\+\) /\1/'
interval=3

[public-ip]
command=wget -qO - ipv4.icanhazip.com
interval=120

[network]
label=E:
command=INTERFACE={{ ethernet_iface }} ~/.config/i3/network
interval=3
color=#7c81c5

[wifi]
label=W:
command=INTERFACE={{ wifi_iface }} ~/.config/i3/essid && echo -n " " && INTERFACE={{ wifi_iface }} ~/.config/i3/network
interval=3
color=#7c81c5

[disk-home]
label=/home:
command=python3 -c "import os; print(os.popen('df -h | grep /home\$').read().split()[3])"
interval=30
color=#859900

[temperature]
command=~/.config/i3/temperature
interval=5
color=#b58900

[memory]
label=mem:
command=python3 -c "import os; print(os.popen('free -h | grep Mem:').read().split()[2])"
interval=5
color=#F6DE02

[cpu]
label=cpu:
command=~/.config/i3/cpu_usage
interval=3
color=#6c71c4

[volume-pulseaudio]
command=~/.config/i3/volume-pulseaudio
interval=10
signal=1
#MIXER=[determined automatically]
#SCONTROL=[determined automatically]
##exposed format variables: ${SYMB}, ${VOL}, ${INDEX}, ${NAME}
#LONG_FORMAT="${SYMB} ${VOL}% [${INDEX}:${NAME}]"
#SHORT_FORMAT="${SYMB} ${VOL}% [${INDEX}]"
#AUDIO_HIGH_SYMBOL='  '
#AUDIO_MED_THRESH=50
#AUDIO_MED_SYMBOL='  '
#AUDIO_LOW_THRESH=0
#AUDIO_LOW_SYMBOL='  '
#AUDIO_DELTA=5
#DEFAULT_COLOR="#ffffff"
#MUTED_COLOR="#a0a0a0"
#USE_ALSA_NAME=0
#USE_DESCRIPTION=0
## SUBSCRIBE=1 requires interval=persist and always uses LONG_FORMAT
#SUBSCRIBE=0

[backlight]
command=~/.config/i3/backlight
label=☀
interval=20
#STEP_SIZE=5
#USE_SUDO=0

[battery]
command=~/.config/i3/battery
markup=pango
interval=10

[time]
command=date '+%a %Y-%m-%d %H:%M:%S %p'
interval=1
color=#50C878
